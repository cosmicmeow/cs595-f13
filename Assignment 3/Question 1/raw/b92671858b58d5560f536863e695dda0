                emailToFriendValidator = $('div#email-to-friend').find('form').validate({
                    rules: {
                        from_email: { required: true, email: true },
                        to_email: { required: true, multiemail: true },
                        recaptcha_response_field: { required: true }
                    },
                    messages: {
                        recaptcha_response_field: ''
                    },
                    submitHandler: function(form) {
                        $(form).ajaxSubmit({
                            success: function(data) {
                                if (data.success) {
                                    $(form).resetForm();
                                    $('div#email-to-friend').dialog('close');
                                    alert('Email sent.');
                                }
                                else {
                                    Recaptcha.reload();
                                    var errorList = {};
                                    for (var i = 0; i < data.invalidValues.length; i++) {
                                        var err = data.invalidValues[i];
                                        for (var j = 0; j < err.errors.length; j++) {
                                            errorList[err.key] = err.errors[j];
                                        }
                                    }
                                    emailToFriendValidator.showErrors(errorList);
                                }
                            },
                            dataType: 'json'
                        });
                    }
                });
                $('img.btn_cancel').click(function() {
                    $('div#email-to-friend').dialog('close');
                });
                $('img.btn_submit').click(function() {
                    $('div#email-to-friend').find('form').submit();
                });
