    <script>
    $(function() {
        $("#anchor_topmenu_tweet").click(function() {
            if(DEBUG_ENABLED) console.log("Tweet button clicked."); 

            var tweetButtonUrl = "https://twitter.com/share";

            var tweetMessage = "Get your daily tech news fix at Snip Blog.";

            var enclodedTweetMessage = encodeURIComponent(tweetMessage);
            tweetButtonUrl = tweetButtonUrl + "?" + "lang=en&" + "text=" + enclodedTweetMessage;
            tweetButtonUrl += "&related=snipnews";
            window.open(tweetButtonUrl, "customTweetButtonPopup", 'height=450,width=550,toolbar=no,scrollbars=no');
            return false;

        });
    });
    </script>



