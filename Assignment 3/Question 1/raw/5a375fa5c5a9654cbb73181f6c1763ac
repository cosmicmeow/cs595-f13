<script>
$(function(){
var slider1 = $('#slider1');
$('#prevsecao1').hide(); /*init*/
$('#prevsecao1').click(function(){
currentPage = slider1.data('AnythingSlider').currentPage;
currentPage = currentPage - 1;
slider1.data('AnythingSlider').goBack();
if ( currentPage == 1){
$(this).hide();
}
if (currentPage != 3){
$('#nextsecao1').show();
}
slider1.data('AnythingSlider').checkResize();
});
$('#nextsecao1').click(function(){
currentPage = slider1.data('AnythingSlider').currentPage;
currentPage = currentPage +1;
slider1.data('AnythingSlider').goForward();
if (currentPage != 1){
$('#prevsecao1').show();
}
if (currentPage == 3){
$(this).hide();
}
slider1.data('AnythingSlider').checkResize();
});
slider1.anythingSlider({
autoPlay: false,
buildArrows: false,
buildNavigation: false,
infiniteSlides: false,
hashTags: false,
buildStartStop: false,
expand:true,
vertical:true,
delay: 1000
});
});
</script>
