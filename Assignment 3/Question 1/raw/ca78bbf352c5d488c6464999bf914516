<script>
	function postsInit() {
		document.addEventListener("DOMContentLoaded", showPosts, false);
	}
	
	function showPosts() {
	
		var postTitles = document.getElementsByClassName("newPostTitle");
		var authorNames = document.getElementsByClassName("authorPostInfo");
			
		for (var i = 0; i < 4; i++)
		{
			postTitles[i].innerHTML = threads[i].title;
			postTitles[i].href = "http://www.kirupa.com/forum/showthread.php?"+threads[i].threadid;
			authorNames[i].textContent = "by " + threads[i].poster;
		}
	}
	postsInit();
</script>
