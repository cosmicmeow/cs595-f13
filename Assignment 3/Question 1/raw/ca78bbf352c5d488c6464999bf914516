<script>
function getForumData() {
    var httpc = new XMLHttpRequest();
    var url = "http://www.kirupa.com/ssi/newDesign/forum_info.php";
    httpc.open("POST", url, true);
    httpc.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");

    httpc.onreadystatechange = function() { //Call a function when the state changes.
	    if(httpc.readyState == 4 && httpc.status == 200) { // complete and no errors
	        showTemplate(httpc.responseText);
	    }
    }
    httpc.send();
}
getForumData();

var count = 0;

function showTemplate(response) {
	var loginText = document.getElementById("logintext");
	
	if (response == "LOGIN") {
		var loginHTML = document.getElementsByClassName("displayLogInJoin")[0];
		
		var loginTextCopy = loginHTML.cloneNode(true);
		loginText.appendChild(loginTextCopy)
	} else {
		if (count == 0) {
			var memberHTML = document.getElementsByClassName("displayMemberInfo")[0];
			
			var memberName = document.getElementById("memberName");
			
			var jsonData = JSON.parse(response);
			
			memberName.childNodes[0].textContent = jsonData[0];
			memberName.style.backgroundImage="url(http://www.kirupa.com/forum/" + jsonData[3] +")";
	
			var memberHTMLCopy = memberHTML.cloneNode(true);
			loginText.appendChild(memberHTMLCopy)
			
			count++;
			
			//setupDropDownMenu();
		}
	}
}

var dropDown;
function setupDropDownMenu() {
	dropDown = document.getElementById("headerMenu");
	var memberName = document.getElementById("memberName");
	
	memberName.addEventListener("mouseover", showMenu, true);
	memberName.addEventListener("mouseout", hideMenu, true);
	
	dropDown.addEventListener("mouseover", showMenu, true);
	dropDown.addEventListener("mouseout", hideMenu, true);
}

function showMenu(e) {
	dropDown.className = dropDown.className.replace("hidden","visible");
}
function hideMenu() {
	dropDown.className = dropDown.className.replace("visible","hidden");
}

</script>
