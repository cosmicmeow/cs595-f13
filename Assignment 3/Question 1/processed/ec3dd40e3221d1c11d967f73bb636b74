    <script type="text/javascript">
        $(function(){
            if ($('#slider_widget > li').length > 0) {
                $('#slider_widget').bxSlider({
                    pager: true,
                    controls: false
                });
            }
            
            
            var lastArticle = $('div#home_grid > div.grid.articles_type > div.news > div').get(6);
            var banner = $('#gbanner');
            var additionalHeight = $(lastArticle).offset().top + $(lastArticle).outerHeight(true) - $(banner).offset().top - $(banner).outerHeight(false);
            if (additionalHeight > 0) {
                $(banner).height($(banner).height() + additionalHeight);
            }
        });
        
        
            
            $(window).load(function() { // will be executed after images are loaded (important for the heights
                var container = $('div.grid.research_type > div.news > div');
                while (true) {
                    var lastElemAnchor = $('div#content .homepage_grid div.grid div.news> div > p').last().children('a')[0];
                    if ($(lastElemAnchor).position().top + $(lastElemAnchor).height() <= $(container).position().top + $(container).height()) {
                        // nothing to trim, no words to cut, everything is top-notch
                        return;
                    }
                    // start by trimming the anchor text
                    $(lastElemAnchor).html($.trim($(lastElemAnchor).html()));

                    // remove words one by one, append ellipsis to show text has been cut
                    while ($(lastElemAnchor).position().top + $(lastElemAnchor).height() > $(container).position().top + $(container).height()) {
                        var text = $(lastElemAnchor).html();
                        if (text === '...') {
                            // all the words cut, and element still not small enough to fit
                            $(lastElemAnchor).parent().remove();
                            break;
                        }
                        // cut last word and add ellipsis
                        text = text.substr(0, text.lastIndexOf(' ')) + '...';
                        $(lastElemAnchor).html(text);
                    }
                }
            });
        
    </script>

