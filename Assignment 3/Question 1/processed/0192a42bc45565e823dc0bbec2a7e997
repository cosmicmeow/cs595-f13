<!--Ad Injection mfunc mode ad code--><!--mfunc adshow_display_ad_file_v2(array('ad_top_1.txt'), array(100), array('align' => 'center', 'clear' => 'both', 'margin_top' => '0', 'margin_bottom' => '0', 'padding_top' => '0', 'padding_bottom' => '0'), array(), array()) -->

<div style='clear:both;margin-top:0px;margin-bottom:0px;padding-top:0px;padding-bottom:0px;'><center><div id=”ad1″>
<script type="text/javascript"><!--
google_ad_client = "ca-pub-7570974928181917";
/* AATTP Above Article Lrg Rec */
google_ad_slot = "1645735245";
google_ad_width = 336;
