<script type="text/javascript">

	function showBar(){
		$("#slide-area").animate({
			bottom: '0'
		});
		$("#ribbon-right").animate({
			bottom: '0'
		});
	}

	$(document).ready(function(){
		jQuery(function ($) {
			// Load dialog on page load
			//$('#basic-modal-content').modal();

			// Load dialog on click
			$('.basic').click(function (e) {
				$('#basic-modal-content').modal();

				return false;
			});
		});

		// if ie6
		if (!window.XMLHttpRequest) {
			var isIE6 = true;
		}

		//if ipad
		var isiPad = navigator.userAgent.match(/iPad/i) != null;

		//if iphone
		var isiPhone = navigator.userAgent.match(/iPhone/i) != null;

		//if mobile device
		var isMobile = "";

		if ( (isiPad) || (isIE6) || (isiPhone) || (isMobile) ){
			$('#bottom-anchor-wrapper').addClass("ipad-anchor-wrapper");
		} else {
			$('#bottom-anchor-wrapper').addClass("web-anchor-wrapper");
		}

		if ( (isiPad)|| (isiPhone) || (isMobile) ) {
			$('#term').addClass("ipad-search-box");
		} else {
			$('#term').addClass("web-search-box");
		}

	});

</script>

