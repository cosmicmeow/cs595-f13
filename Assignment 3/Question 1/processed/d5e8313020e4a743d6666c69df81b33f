								var expire = new Date();
								expire.setTime(1381020835000);

									if(welcomeCookie != "hdm_welcome_undefined" && welcomeCookie != null && screen.width > 768) {
										if ((document.cookie.indexOf(welcomeCookie)==-1)) {
							  			var tomorrow = new Date();
							        if(frequency == "undefined" || frequency == null){
