			$("#hidden-7").show();
		  }, 
		  function () {
			$("#hidden-7").hide();
		  }
		);
		$("#hidden-8").hover(
		  function () {
			$("#hidden-8").show();
		  }, 
		  function () {
			$("#hidden-8").hide();
		  }
		);
		$("#hidden-9").hover(
		  function () {
			$("#hidden-9").show();
		  }, 
		  function () {
			$("#hidden-9").hide();
		  }
		);
	});

</script>

